<!DOCTYPE html>
<html>

<head>
  <title>Phone Book</title>

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap');

    body {
      font-family: 'Roboto', sans-serif;
      padding: 0;
      margin: 0;
      display: flex;
      justify-content: center;
      margin-top: 100px;

    }

    .container {
      height: 500px;
      width: 500px;
      background-color: skyblue;
      text-align: center;
      border-radius: 20px;
    }

    #add {
      font-size: 1.5rem;
      padding: 10px 50px;
      background-color: rgb(173, 2, 2);
      color: white;
      border-radius: 5px;
      cursor: pointer;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1 style="margin-top: 100px;">Phone Book</h1>
    <ul style="list-style: none;">
      <% contacts.forEach(contact=> { %>
        <hr>
        <li style="font-size: 1.5rem;">
          <%= contact.name %> - <%= contact.phone %><br>
              <a href="/edit/<%= contact._id %>"
                style="margin-left: -40px;text-decoration: none;color: black;margin-top: 20px;">Edit</a><br>
              <a href="/delete/<%= contact._id %>"
                style="margin-left: -40px;text-decoration: none;color: black;">Delete</a>
        </li>
        <hr>
        <% }) %>
    </ul>
    <a href="/add" style="text-decoration: none;" id="add">Add
      Contact</a>
  </div>
</body>

</html>